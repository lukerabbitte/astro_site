---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';


function generateThreeDigitNumber() {
	// Generate a random number between 0 and 297
	const randomNumber = Math.floor(Math.random() * 298);
	// Format the number as a three-digit string with leading zeros
	const threeDigitNumber = randomNumber.toString().padStart(3, '0');
	return threeDigitNumber;
}

const frameIndex = generateThreeDigitNumber();
const frameString = `/gif-frames/frame_${frameIndex}_delay-0.09s.gif`;
console.log(frameString);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>

			<img class="image-container" src="/luke-interlaken-min.JPG" alt="Luke Interlaken">
			<p>I am a 4th year Computer Science and Language student in Trinity College Dublin. Welcome! Here you'll find some of my musings, as well as my GitHub and social links to keep up with all of my personal projects.</p>
			<p>I am constantly iterating upon this site, so expect some new visual and functional changes coming soon. </p>
			<img id="anagram" src={frameString} alt="Anagram Animation">
			
		</main>
		<Footer />

		<style>
			main {
				margin: 0;
				width: 100%
				display: flex;
				flex-direction: column;
			}

			#anagram {
				width: 100%;
				transform: scale(0.5);
			}

			.image-container {
				display: flex;
				justify-content: center;
				width: 100%;
			}

			
		</style>

	</body>
</html>