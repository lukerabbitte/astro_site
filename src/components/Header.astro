---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<h1 id="siteTitle">
		{SITE_TITLE}
	</h1>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Writing</HeaderLink>
		<HeaderLink href="https://www.instagram.com/lukerabbitte/" target="_blank">Instagram</HeaderLink>
		<HeaderLink href="https://github.com/lukerabbitte" target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	nav {
    padding-top: 20px;
	}
	h2 {
		margin: 0.5em 0;
	}
	#siteTitle {
	margin: 0em;
	width: 100%;
	height: auto;
	font-family: 'Roboto Mono', monospace;
	font-size: 96px;
	font-weight: bold;
	color: #000000;
	line-height: 2;
	background-image: url('/keem-bay-house-min.jpeg'); 
	background-size: cover;
	background-position: center;
	background-repeat: repeat;
	background-size: 12%;
	}
	
</style>