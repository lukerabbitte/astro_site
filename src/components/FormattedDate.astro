---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>


<style>

	time {
		margin: 10px 0 10px 0;
		text-align: center;
		color: black;
		font-family: 'Roboto Mono', monospace;
	}

</style>